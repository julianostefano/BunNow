# Notification System Configuration
# Copy to .env and configure as needed

# Redis Configuration (required for notification queue)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Notification Queue Settings
NOTIFICATION_QUEUE_SIZE=10000
NOTIFICATION_MAX_RETRIES=5
NOTIFICATION_CLEANUP_INTERVAL=300000
NOTIFICATION_PROCESSING_INTERVAL=1000

# Rate Limiting
NOTIFICATION_RATE_LIMIT_MINUTE=100
NOTIFICATION_RATE_LIMIT_HOUR=1000
NOTIFICATION_BURST_SIZE=10

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30000
WS_IDLE_TIMEOUT=300000
WS_MAX_MESSAGE_SIZE=65536
WS_RATE_LIMIT_MINUTE=60
WS_CONNECTIONS_PER_IP=10

# Server-Sent Events (SSE) Configuration
SSE_MAX_STREAMS=500
SSE_HEARTBEAT_INTERVAL=30000
SSE_MAX_EVENT_SIZE=65536
SSE_RETRY_INTERVAL=5000
SSE_COMPRESSION=true
SSE_RATE_LIMIT_MINUTE=100
SSE_CONNECTIONS_PER_IP=5

# Push Notifications (optional)
PUSH_ENABLED=false
# VAPID_PUBLIC_KEY=your_vapid_public_key
# VAPID_PRIVATE_KEY=your_vapid_private_key
PUSH_MAX_SUBSCRIPTIONS=1000

# Email Notifications (optional)
EMAIL_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_app_password

# Webhook Notifications
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3